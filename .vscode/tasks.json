{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build stage1",
            "type": "shell",
            "command": "nasm -f elf64 stage1.asm -o stage1.elf"
        },
        {
            "label": "build stage2",
            "type": "shell",
            "command": "nasm -f elf64 stage2.asm -o stage2.elf"
        },
        {
            "label": "link object files",
            "type": "shell",
            "command": "ld -m elf_x86_64 -o program.bin stage2.elf stage1.elf -nostdlib -T linker.ld",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build stage1",
                "build stage2"
            ],
            "problemMatcher": []
        },
        {
            "label": "qemu run",
            "type": "shell",
            "command": "qemu-system-x86_64 -drive format=raw,file=program.bin",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "link object files",
            "problemMatcher": []
        },
        {
            "label": "install usb",
            "type": "shell",
            "command": "sudo dd if=program.bin of=/dev/<INSERT YOUR DEVICE HERE> && sync",
            "dependsOn": "link object files",
            "problemMatcher": []
        }
    ]
}
