{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build assembly",
            "type": "shell",
            "command": "nasm -f elf64 assembler.asm -o object.elf"
        },
        {
            "label": "linker script",
            "type": "shell",
            "command": "ld.lld -m elf_x86_64 -o program object.elf -nostdlib -T linker.ld",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "build assembly"
        },
        {
            "label": "objcopy to binary",
            "type": "shell",
            "command": "objcopy -I elf64-x86-64 -O binary --binary-architecture=i386:x86-64 program program.bin",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "linker script"
        },
        {
            "label": "qemu run",
            "type": "shell",
            "command": "qemu-system-x86_64 -drive format=raw,file=program.bin",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "objcopy to binary",
            "problemMatcher": []
        }
    ]
}